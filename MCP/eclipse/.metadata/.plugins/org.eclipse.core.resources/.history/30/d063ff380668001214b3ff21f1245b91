package bestock.mod.tweaks;

import net.minecraft.block.Block;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.item.*;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.world.World;

public class Grappler extends Item
{
    public Grappler(int par1)
    {
        super(par1);
        this.maxStackSize = 1;
        this.setMaxDamage(200);
        this.setItemName("Grappler");
        this.setIconIndex(0);
        this.setCreativeTab(CreativeTabs.tabTools);
    }

    public String getTextureFile () {
        return TweaksCommonProxy.ITEMS_PNG;
    }
    
    /**
     * Callback for item usage. If the item does something special on right clicking, he will have one of those. Return
     * True if something happen and false if it don't. This is for ITEMS, not BLOCKS
     */
    public boolean onItemUse(ItemStack par1ItemStack, EntityPlayer par2EntityPlayer, World par3World, int par4, int par5, int par6, int par7, float par8, float par9, float par10)
    {
    	int oX, oY, oZ;
    	oX = par4; oY = par5; oZ = par6;
        if (par7 == 0)
        {
            --par5; //z decrease
        }

        if (par7 == 1)
        {
            ++par5;  //z increase
        }

        if (par7 == 2)
        {
           --par6; // y decrease
        }

        if (par7 == 3)
        {
            ++par6; // y increase
        }

        if (par7 == 4)
        {
            --par4; //x decrease
        }

        if (par7 == 5)
        {
            ++par4; //x increase
        }

        if (!par2EntityPlayer.canPlayerEdit(par4, par5, par6, par7, par1ItemStack))
        {
            return false;
        }
        else
        {
            int var11 = par3World.getBlockId(par4, par5, par6);

            if (var11 == 0) //==
            {
                //par3World.playSoundEffect((double)par4 + 0.5D, (double)par5 + 0.5D, (double)par6 + 0.5D, "fire.ignite", 1.0F, itemRand.nextFloat() * 0.4F + 0.8F);
                int origID = par3World.getBlockId(oX, oY, oZ); //gets original block id
                TileEntity origTE = par3World.getBlockTileEntity(oX, oY, oZ); //gets tileEntity
                int origMeta = par3World.getBlockMetadata(oX, oY, oZ); //gets metadata
                
                par3World.setBlockWithNotify(oX, oY, oZ, 0); //deletes old block
                par3World.setBlockWithNotify(par4, par5, par6, origID);
                par3World.setBlockTileEntity(par4, par5, par6, origTE);
                par3World.setBlockMetadataWithNotify(par4, par5, par6, origMeta);
            }

           par1ItemStack.damageItem(1, par2EntityPlayer);
            return true;
        }
    }
}
